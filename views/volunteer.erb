<form class="" action="/volunteers/<%= @volunteer.id %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name"><h2>Name: </h2></label>
  <input type="text" name="name" value="<%= @volunteer.name %>">
  <button type="submit" name="button">Update Volunteer</button>
</form>
<h3>Hours Volunteered: <%= @volunteer.hours %></h3>

<form class="" action="/volunteers/<%= @volunteer.id %>/delete" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" name="button">Remove Volunteer</button>
</form>
<a href="/projects/<%= @volunteer.project_id %>">View Current Project Assignment</a>
<br>
<a href="/">Return home</a>
