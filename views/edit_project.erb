<h2><%= @project.title %></h2>

<form class="" action="/projects/<%= @project.id %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="title">Title</label>
  <input type="text" name="title" class="form-control" value="<%= @project.title %>">
  <label for="total_hours">Total Hours Worked</label>
  <input type="number" name="total_hours" class="form-control" value="<%= @project.total_hours %>">
  <button type="submit" name="button">Update Project</button>
</form>
